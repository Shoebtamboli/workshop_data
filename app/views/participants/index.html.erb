<h1>All Participants</h1>
<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Send Feedback Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @participants.each do |participant| %>
      <tr>
        <td><%= participant.name %></td>
        <td><%= participant.email %></td>
        <td>
          <%= button_to 'Send Link', send_feedback_link_participant_path(participant), 
                        method: :post, data: { turbo_disable: true } %>
        </td>
        <td><%= link_to 'Edit', edit_participant_path(participant) %></td>
        <td><%= link_to 'Destroy', participant_path(participant), method: :delete, data: {
                    confirm: 'Are you sure?'
                  } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Participant', new_participant_path %>
<%= link_to 'Feedback Summary', feedback_summary_path %>